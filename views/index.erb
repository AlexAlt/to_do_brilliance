<h1>To-Do:</h1>

<p>Select a list:</p>

<ul>
  <% @lists.each() do |list| %>
    <li> <a href="/lists/<%= list.id() %>"><%= list.name() %></a></li>
  <% end %>
</ul>

<p>Add a list</p>

<form action="/lists" method="post">
  <label for="name">Name your list</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add it!!</button>
</form>

<p>All of your tasks:</p>

<ul>
  <% @tasks.not_done().each() do |task| %>
    <li> <%= task.description %> <a href="/tasks/<% task.id() %>/edit">Update this task's description</a> </li>
    <% end %>
</ul>
